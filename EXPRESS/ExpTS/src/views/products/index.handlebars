<div class="d-flex justify-content-between align-items-cente">
    <h2>Listagem de produtos</h2>
    <h2>
        <a href="/products/create">
        <i class="bi bi-plus-circle-fill"></i>
        </a>
    </h2>
</div>
<div>
    <table class="table table-striped">
        <thead>
            <tr class="text-end">
                <th scope="col">Nome</th>
                <th scope="col">Preço</th>
                <th scope="col">Estoque</th>
                <th scope="col">Opções</th>
            </tr>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td>{{stock}}</td>
                <td class="text-end">
                    <a href="/products/{{id}}"><i class="bi bi-eye-fill"></i></a>
                    <a href="/products/update/{{id}}"><i class="bi bi-pencil-fill"></i></a>
                    <a href="/products/remove/{{id}}" method="POST" style="display:inline;"><i class="bi bi-trash3-fill"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>